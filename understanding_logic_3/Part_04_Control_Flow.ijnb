      "id": "fe7f9e82-58ae-409a-943f-f4e66df444b8",
      "cell_type": "code",
      "source": "// Bank Implementation: Database Constraint Pattern\n// Simulates how a commercial bank would prevent double debits\n\nimport java.util.HashMap;\n\n// Simulating a bank database with transactions table\nclass BankDatabase {\n    // UUID -> Transaction record\n    private HashMap<String, String> transactions = new HashMap<>();\n    \n    // This simulates a SQL UNIQUE constraint on (account_id, transaction_id)\n    public synchronized boolean validateAndLogTransaction(String accountId, String transactionId) {\n        String key = accountId + \"-\" + transactionId;\n        \n        // Database constraint logic: Check if this exact (accountId, txnId) pair exists\n        if (transactions.containsKey(key)) {\n            return false; // Duplicate detected - REJECTED\n        }\n        \n        // If not found, log it\n        transactions.put(key, \"PROCESSED-\" + System.currentTimeMillis());\n        return true; // SUCCESS\n    }\n}\n\n// Simulating a customer withdrawal with network retries\nBankDatabase bankDB = new BankDatabase();\n\nSystem.out.println(\"=== BANK WITHDRAWAL WITH DUPLICATE DETECTION ===\\n\");\n\n// Customer details\nString accountId = \"ACC-2024-987654\";\nString transactionId = \"TXN-20260221-12345\"; // Generated by mobile app\ndouble amount = 5000.00;\n\n// First attempt\nSystem.out.println(\"First withdrawal attempt:\");\nSystem.out.println(\"Account: \" + accountId);\nSystem.out.println(\"Transaction ID: \" + transactionId);\nSystem.out.println(\"Amount: N\" + amount);\n\nif (bankDB.validateAndLogTransaction(accountId, transactionId)) {\n    System.out.println(\"✓ Transaction logged successfully.\");\n    System.out.println(\"  Balance deducted from account.\");\n    System.out.println(\"  Sending confirmation to customer...\");\n    System.out.println(\"  >> Network failure occurs before confirmation reaches customer! <<\");\n} else {\n    System.out.println(\"✗ Duplicate transaction detected. Rejected.\");\n}\n\n// Customer doesn't receive confirmation and retries (same transaction ID)\nSystem.out.println(\"\\n---\\n\");\nSystem.out.println(\"Customer retries (same transaction ID due to network failure):\");\n\nif (bankDB.validateAndLogTransaction(accountId, transactionId)) {\n    System.out.println(\"✓ Transaction logged successfully.\");\n    System.out.println(\"  Balance deducted from account.\");\n    System.out.println(\"  Confirmation sent.\");\n} else {\n    System.out.println(\"✗ Duplicate transaction detected. REJECTED.\");\n    System.out.println(\"  → Balance remains unchanged.\");\n    System.out.println(\"  → System shows: 'You already withdrew this amount.'\");\n    System.out.println(\"  → Double debit PREVENTED! ✓\");\n}",
